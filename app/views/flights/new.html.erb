<div class="topnav" id="myTopnav">
  <%= link_to "Home", users_path %>
  <%= link_to "All Trips", user_trips_path(current_user) %>
  <%= link_to "This Trip", user_trip_path(current_user, current_trip) %>
  <%= link_to "Logout", logout_path, class: "logout" %>
  <%= link_to "Profile", user_path(current_user), class: "logout" %>
</div>

<% if @flight.errors.any? %>
  <div class="flash flash-full flash-error"><% @flight.errors.messages.each do |attr, message| %>
    <%= attr %> <%= message[0] %><br />
  <% end %></div>
<% end %>

<%= form_for @flight, url: trip_flights_path, action: 'post' do |f| %>

  <%= render partial: 'form', locals: { f: f } %>

  <%= f.hidden_field :booked, value: false %>

<% end %>
