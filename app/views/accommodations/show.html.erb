<div class="topnav" id="myTopnav">
  <%= link_to "Home", users_path %>
  <%= link_to "All Trips", user_trips_path(current_user) %>
  <%= link_to "Current Trip", user_trip_path(current_user, current_trip) %>
  <%= link_to "All Accommodations", trip_accommodations_path(current_trip) %>
  <%= link_to "Logout", logout_path, class: "nav-right" %>
  <%= link_to "Profile", user_path(current_user), class: "nav-right" %>
  <%= link_to "Add New Accommodation", new_trip_accommodation_path, class: "nav-right", style: "background: blue" %>
</div><br />

<div class="reservation" >
  <div class="column-4 title">Name</div>
  <div class="column-4 title">Type</div>
  <div class="column-4 title">Address</div>
  <div class="column-4 title">Cost</div>
  <div class="column-4"><%= @accommodation.name %></div>
  <div class="column-4"><%= @accommodation.accommodation_type %></div>
  <div class="column-4"><%= @accommodation.address %>, <%= @accommodation.location %></div>
  <div class="column-4 pb-30"><%= number_to_currency(@accommodation.cost) %></div>

  <div class="column-4 title">Check-In Date</div>
  <div class="column-4 title">Check-In Time</div>
  <div class="column-4 title">Check-Out Date</div>
  <div class="column-4 title">Check-Out Time</div>
  <div class="column-4"><%= @accommodation.arrival_date %></div>
  <div class="column-4"><%= @accommodation.check_in.strftime('%H:%M %p') %></div>
  <div class="column-4"><%= @accommodation.departure_date %></div>
  <div class="column-4 pb-30"><%= @accommodation.check_out.strftime('%H:%M %p') %></div>

  <div class="column-2"><%= link_to "Edit Accommodation", edit_trip_accommodation_path(current_trip, @accommodation) %></div>
  <div class="column-2"><%= link_to "Delete Accommodation", trip_accommodation_path(current_trip, @accommodation), method: :delete, data: { confirm: "Are you sure you want to delete this accommodation?" } %></div>

</div>
