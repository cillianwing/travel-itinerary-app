<div class="topnav" id="myTopnav">
  <%= link_to "Home", users_path %>
  <%= link_to "Profile", user_path(current_user) %>
  <%= link_to "Logout", logout_path, class: "logout" %>
</div>

<body class="user-profile">
  <div class="profile-form" >

    <div class="profile-form-header p-0">
      <%= link_to image_tag("travel-banner.png", class: "signup-form px-3"), login_path %>
    </div>

    <% if flash[:alert] %>
      <div class="flash flash-full flash-error"><%= flash[:alert] %></div>
    <% end %>

    <div class="profile-form-body mt-3">

      <h2 class="input-block">Name: <%= "#{@user.name}" %></h2>
      <h2 class="input-block">Biography: <%= "#{@user.biography}" %></h2>
      <h2 class="input-block">Location: <%= "#{@user.location}" %></h2>
      <h2 class="input-block">Username: <%= "#{@user.username}" %></h2>
      <h2 class="input-block">Email: <%= "#{@user.email}" %></h2>

      <%= button_to "Edit User", edit_user_path(@user), class: "btn btn-primary btn-block" %>

    </div>
  </div>
</body>
