<div class="topnav" id="myTopnav">
  <%= link_to "Home", users_path %>
  <%= link_to "Profile", user_path(current_user), class: "logout" %>
  <%= link_to "Logout", logout_path, class: "logout" %>
</div>

<body class="user-profile">
  <div class="profile-form" >

    <div class="profile-form-header p-0">
      <%= link_to image_tag("travel-banner.png", class: "signup-form px-3"), login_path %>
    </div>

    <% if flash[:alert] %>
      <div class="flash flash-full flash-error"><%= flash[:alert] %></div>
    <% end %>

    <div class="profile-form-body mt-3">

      <p class="input-block">Name: <%= "#{@user.name}" %><p2>
      <p class="input-block">Biography: <%= "#{@user.biography}" %></p>
      <p class="input-block">Location: <%= "#{@user.location}" %></p>
      <p class="input-block">Email: <%= "#{@user.email}" %></p>

      <%= link_to '<button class="btn btn-primary btn-block" type="button">Edit User</button>'.html_safe, edit_user_path %><br /><br />

      <%= link_to "Delete User", user_path, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %><br />

    </div>
  </div>
</body>
