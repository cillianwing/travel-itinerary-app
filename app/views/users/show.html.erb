<div class="topnav" id="myTopnav">
  <%= link_to "Home", users_path %>
  <%= link_to "All Trips", user_trips_path(current_user) %>
  <%= link_to "Logout", logout_path, class: "nav-right" %>
</div><br />

<body class="user-profile">
  <div class="profile-form" >

    <div class="profile-form-header p-0">
      <%= link_to image_tag("travel-banner.png", class: "signup-form px-3"), login_path %>
    </div>

    <% if flash[:alert] %>
      <div class="flash flash-full flash-error"><%= flash[:alert] %></div>
    <% end %>

    <% if flash[:success] %>
      <div class="flash flash-full flash-success"><%= flash[:success] %></div>
    <% end %>

    <div class="profile-form-body mt-3">

      <p class="input-block">Name: <%= "#{@user.name}" %><p>
      <p class="input-block">Biography: <%= "#{@user.biography}" %></p>
      <p class="input-block">Location: <%= "#{@user.location}" %></p>
      <p class="input-block">Email: <%= "#{@user.email}" %></p>
      <p class="input-block">Completed Trips: <%= "#{@past_trips.length}" %></p>
      <p class="input-block">Upcoming Planned Trips: <%= "#{@user.trips.count}" %></p>
      <p class="input-block">Booked Flights: <%= "#{@user.all_flights.length}" %></p>
      <p class="input-block">Booked Accommodations: <%= "#{@user.all_accommodations.length}" %></p>
      <p class="input-block">Booked Activities: <%= "#{@user.all_activities.length}" %></p>
      <p class="input-block">Cost of Upcoming Trips: <%= number_to_currency(current_user.all_trips_cost(current_user.trips)) %></p>

      <%= link_to '<button class="btn btn-primary btn-block" type="button">Edit User</button>'.html_safe, edit_user_path %><br /><br />

      <%= link_to '<button class="btn btn-primary-delete btn-block" type="button">Delete User</button>'.html_safe, user_path, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %><br />

    </div>
  </div>
</body>
