<div class="topnav" id="myTopnav">
  <%= link_to "Home", users_path %>
  <%= link_to "Upcoming Trips", user_trips_path(@user) %>
  <%= link_to "Logout", logout_path, class: "nav-right" %>
  <%= link_to "Profile", user_path(@user), class: "nav-right" %>
  <%= link_to "Past Trips", past_trips_path(@user), class: "nav-right" %>
</div>

<% if flash[:alert] %>
  <div class="flash flash-full flash-error"><%= flash[:alert] %></div>
<% end %>

<div class="row">
  <div class="gallery">
    <div class="desc">View All Upcoming Trips</div>
    <%= link_to image_tag("trips.jpg"), user_trips_path(@user), class: "dropdown" %>
    <div class="dropdown-content">
      <% @upcoming_trips.each do |trip| %>
        <%= link_to "<button class='btn btn-primary btn-block' type='button'>#{trip.name}</button>".html_safe, user_trip_path(@user, trip) %>
      <% end %>
    </div>
  </div>

  <div class="gallery">
    <div class="desc">Flights for Upcoming Trips</div>
    <%= link_to image_tag("flying.jpg"), user_trips_path(@user) %>
    <% if !@upcoming_trips.empty? %>
      <div class="dropdown-content">
        <div style="font-weight: bold; padding-bottom: 5px">Which trip would you like to view flights for?</div>
        <% @upcoming_trips.each do |trip| %>
          <%= link_to "<button class='btn btn-primary btn-block' type='button'>#{trip.name}</button>".html_safe, trip_flights_path(trip) %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="gallery">
    <div class="desc">Activities for Upcoming Trips</div>
    <%= link_to image_tag("hiking.jpg"), user_trips_path(@user) %>
    <% if !@upcoming_trips.empty? %>
      <div class="dropdown-content">
        <div style="font-weight: bold; padding-bottom: 5px">Which trip would you like to view activities for?</div>
        <% @upcoming_trips.each do |trip| %>
          <%= link_to "<button class='btn btn-primary btn-block' type='button'>#{trip.name}</button>".html_safe, trip_activities_path(trip) %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="gallery">
    <div class="desc">Accommodations for Upcoming Trips</div>
    <%= link_to image_tag("hotel-pillows.jpg"), user_trips_path(@user) %>
    <% if !@upcoming_trips.empty? %>
      <div class="dropdown-content">
        <div style="font-weight: bold; padding-bottom: 5px">Which trip would you like to view accommodations for?</div>
        <% @upcoming_trips.each do |trip| %>
          <%= link_to "<button class='btn btn-primary btn-block' type='button'>#{trip.name}</button>".html_safe, trip_accommodations_path(trip) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
