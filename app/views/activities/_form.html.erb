<%= f.label :name, "Activity" %><br />
<%= f.text_field :name, class: "activity-form-control input-block" %><br />

<%= f.label :description %><br />
<%= f.text_area :description, class: "activity-form-control input-block" %><br />

<%= f.label :location %><br />
<%= f.text_field :location, class: "activity-form-control input-block" %><br />

<%= f.label :cost, "Cost ($)" %><br />
<%= f.number_field :cost, value: number_to_currency(f.object.cost.to_f, delimiter: '', unit: ''), step: :any, class: "activity-form-control input-block" %><br />

<%= f.label :start_date %><br />
<%= f.date_field :start_date, class: "activity-form-control input-block" %><br />

<%= f.label :end_date %><br />
<%= f.date_field :end_date, class: "activity-form-control input-block" %><br />

<%= f.label :start_time %><br />
<%= f.time_field :start_time, min: Date.today, class: "activity-form-control input-block" %><br />

<%= f.label :end_time %><br />
<%= f.time_field :end_time, class: "activity-form-control input-block" %><br />
